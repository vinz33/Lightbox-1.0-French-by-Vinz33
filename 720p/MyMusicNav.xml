<!-- Foundation -->
<window id="502">
	<defaultcontrol always="true">503</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50, 503, 58</views>


	<onload>RunScript(script.song-to-musicvideo)</onload>	

	<controls>
	
		<include>GlobalBackground</include>
		<include>Viewtype_List</include>
		<include>View_50_List</include>
		<include>Viewtype_Panel_Square</include>
		


<control type="label">
			<label>[LOWERCASE]$INFO[System.Time(hh:mm)][COLOR Accent]$INFO[System.Time(xx)][/COLOR][/LOWERCASE]</label>
					<posx>1284</posx>
					<posy>-10</posy>
					<height>100</height>
					<width>550</width>
					<font>Home_time</font>
					<align>right</align>
					<visible>Window.IsActive(musiclibrary) + !Container.Content(songs)</visible>
		</control>
		
		<control type="label">
			<label>[LOWERCASE][COLOR Accent]$INFO[System.Date(DDD)][/COLOR] $INFO[System.Date(MMM)] $INFO[System.Date(dd)][/LOWERCASE]</label>
					<posx>1280</posx>
					<posy>54</posy>
					<height>100</height>
					<width>750</width>
					<font>Home_date</font>
					<visible>Window.IsActive(musiclibrary) + !Container.Content(songs)</visible>
					<align>right</align>
		</control>
		
		
		<control type="image">
	        <animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
          <effect type="fade" time="300" start="100" end="0" />
        </animation>
	
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture border="2">other_textures/black-back.png</texture>
		</control>
		
		
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>-0</posy>
			<width>305</width>
			<height>720</height>
			<texture border="22">button.png</texture>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
			<effect type="slide" start="0,0" end="-305,0" time="300" />
			</animation>
		</control>
		
		

		<control type="radiobutton" id="19">
			<description>Filter (hidden)</description>
			<include>HiddenButton</include>
		</control>



		<control type="grouplist" id="9000">
			<posx>30</posx>
			<posy>140</posy>
			<width>240</width>
			<height>600</height>
			<itemgap>2</itemgap>
			<onleft>50</onleft>
			<onright>50</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<orientation>vertical</orientation>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0,0" end="-300,0" time="300" />
			</animation>
			
		

			<control type="button" id="2">
				<description>View</description>
				<width>220</width>
				<align>left</align>
				<onclick>Container.NextViewMode</onclick>
			</control>
			
		

			<control type="button" id="3">
				<description>Sort</description>
				<width>240</width>
				<align>left</align>
				<font>small</font>
				<textcolor>black</textcolor>
			</control>

			<control type="togglebutton" id="4">
				<description>Ascending</description>
				<width>240</width>
				<align>left</align>
				<label>584</label>
				<altlabel>585</altlabel>
				<font>small</font>
				<textcolor>black</textcolor>
			</control>

			<control type="button" id="5">
				<description>Files</description>
				<width>240</width>
				<align>left</align>
				<label>31001</label>
				<onclick>SetFocus(50)</onclick>
				<font>small</font>
				<textcolor>black</textcolor>
			</control>

			<control type="button" id="8">
				<description>Search</description>
				<width>240</width>
				<align>left</align>
				<label>137</label>
				<font>small</font>
				<textcolor>black</textcolor>
			</control>

			<control type="radiobutton" id="16">
				<description>PartyMode</description>
				<width>240</width>
				<align>left</align>
				<label>589</label>
				<font>small</font>
				<textcolor>black</textcolor>
			</control>

			<control type="button" id="21">
				<description>Activate Filter</description>
				<width>240</width>
				<align>left</align>
				<label>587</label>
				<onclick>SendClick(musiclibrary,19)</onclick>
				<onclick>SetFocus(22)</onclick>
				<visible>IsEmpty(Window.Property(filter))</visible>
				<font>small</font>
				<textcolor>black</textcolor>
				
			</control>

			<control type="button" id="22">
				<description>Show Filter Label</description>
				<width>240</width>
				<align>left</align>
				<label>$LOCALIZE[587] - $INFO[Window.Property(filter)]</label>
				<onclick>SendClick(musiclibrary,19)</onclick>
				<onclick>SetFocus(21)</onclick>
				<visible>!IsEmpty(Window.Property(filter))</visible>
				<font>small</font>
				<textcolor>black</textcolor>
			</control>

			<control type="button" id="98">
				<description>Open Player Controls</description>
				<width>240</width>
				<align>left</align>
				<label>31015</label>
				<onclick>ActivateWindow(playercontrols)</onclick>
				<visible>Player.HasMedia</visible>
				<font>small</font>
				<textcolor>black</textcolor>
			</control>



		</control>

		


	</controls>

</window>